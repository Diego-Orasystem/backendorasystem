{
  "name": "formulario-api",
  "version": "1.0.0",
  "description": "API para recibir formularios y enviar correos",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "mkdir -p functions && npm install",
    "docker:build": "docker build -t orasystem-backend .",
    "docker:run": "docker run -p 3001:3001 orasystem-backend",
    "docker:compose": "docker-compose up --build",
    "docker:compose:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "form-data": "^4.0.2",
    "mssql": "^11.0.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.7",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
